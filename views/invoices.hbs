<h1>Invoices</h1>
<div id="Invoices">
   <table id="Invoices-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
	    <th>delete</th>
        <th>edit</th>
        </tr>
    </thead>
     {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.invoice_ID}}>
            <td>{{this.invoice_ID}}</td>
            <td>{{this.customer_ID}}</td>
            <td>{{this.employee_ID}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.model_ID}}</td>
	          <td>{{this.trim_ID}}</td>
            <td>{{this.total_Price}}</td>
	    <td><button onclick="deleteCustomer({{this.customer_ID}})">Delete</button></td>
        <td><button onclick="OpenupdateCustomer({{this.customer_ID}})">Edit</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
